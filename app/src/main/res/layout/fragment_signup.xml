<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.auth.singup.SignupFragment">
        <TextView
            android:id="@+id/tvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24dp"
            android:drawableStart="@drawable/ic_back"
            android:fontFamily="@font/medium"
            android:text="@string/back"
            android:textColor="@color/app_black"
            android:textSize="@dimen/_16sp"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/_24dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_25dp"
            android:src="@drawable/signup_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvBack" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:lineSpacingExtra="10dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_60dp"
            android:fontFamily="@font/bold"
            android:text="@string/Enter_by_phone"
            android:textColor="@color/app_black"
            android:textSize="@dimen/_18sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_25dp"
            android:layout_marginTop="@dimen/_16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/medium"
                android:text="@string/full_name"
                android:textColor="@color/app_black"
                android:textSize="@dimen/_16sp" />



                <EditText
                    android:id="@+id/edtName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60dp"
                    android:fontFamily="@font/medium"
                    android:hint="@string/please_enter_your_full_name"
                    android:imeOptions="actionNext"
                    android:textAlignment="viewStart"
                    android:background="@drawable/input_box"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:layout_marginTop="8dp"
                    android:paddingTop="@dimen/_10dp"
                    android:paddingStart="@dimen/_13dp"
                    android:paddingEnd="@dimen/_13dp"
                    android:paddingBottom="@dimen/_14dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:fontFamily="@font/medium"
                android:text="@string/e_mail"
                android:textColor="@color/app_black"
                android:textSize="@dimen/_16sp" />


                <EditText
                    android:id="@+id/edtMail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60dp"
                    android:background="@drawable/input_box"
                    android:fontFamily="@font/medium"
                    android:hint="@string/please_enter_your_email_address"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textAlignment="viewStart"
                    android:layout_marginTop="8dp"
                    android:paddingTop="@dimen/_10dp"
                    android:paddingStart="@dimen/_13dp"
                    android:paddingEnd="@dimen/_13dp"
                    android:paddingBottom="@dimen/_14dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sp" />
        </LinearLayout>


        <Button
            android:id="@+id/btnSignup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_24dp"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_24dp"
            android:fontFamily="@font/medium"
            android:paddingStart="@dimen/_20dp"
            android:paddingTop="@dimen/_14dp"
            android:paddingEnd="@dimen/_20dp"
            android:paddingBottom="@dimen/_16dp"
            android:text="@string/signUp"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/_8dp"
            android:textSize="@dimen/_16sp"
            app:backgroundTint="@color/base_app_color"
            app:cornerRadius="@dimen/_5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:rippleColor="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
