<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingBottom="@dimen/_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="0dp"
            android:layout_height="@dimen/_45dp"
            android:layout_marginHorizontal="@dimen/_2dp"
            android:layout_marginTop="@dimen/_4dp"
            android:background="@drawable/home_date_picker"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:hint="@string/choose_time"
            android:paddingHorizontal="@dimen/_16dp"
            android:textColor="@color/gray6"
            android:textSize="@dimen/_14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/datesguidelineStart"
            app:layout_constraintTop_toBottomOf="@+id/tvStartTimeTitle" />

        <TextView
            android:id="@+id/tvStartTimeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medium"
            android:text="@string/departure_time"
            android:textColor="@color/app_black"
            android:textSize="@dimen/_15sp"
            app:layout_constraintStart_toStartOf="@+id/tvStartTime"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/datesguidelineStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6" />

        <TextView
            android:id="@+id/tvStartDateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medium"
            android:text="@string/travel_date"
            android:textColor="@color/app_black"
            android:textSize="@dimen/_15sp"
            app:layout_constraintStart_toStartOf="@+id/tvStartDate"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvStartDate"
            android:layout_width="0dp"
            android:layout_height="@dimen/_45dp"
            android:layout_marginHorizontal="@dimen/_2dp"
            android:layout_marginTop="@dimen/_4dp"
            android:background="@drawable/home_date_picker"
            android:drawableEnd="@drawable/ic_calender_home"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:hint="@string/choose_date"
            android:paddingHorizontal="@dimen/_16dp"
            android:textColor="@color/gray6"
            android:textSize="@dimen/_14sp"
            app:layout_constraintEnd_toEndOf="@+id/datesguidelineStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvStartDateTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/_10dp"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="0dp"
            android:layout_height="@dimen/_45dp"
            android:layout_marginHorizontal="@dimen/_2dp"
            android:layout_marginTop="@dimen/_4dp"
            android:background="@drawable/home_date_picker"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:hint="@string/choose_time"
            android:paddingHorizontal="@dimen/_16dp"
            android:textColor="@color/gray6"
            android:textSize="@dimen/_14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/datesguidelineEnd"
            app:layout_constraintTop_toBottomOf="@+id/tvEndTimeTitle" />

        <TextView
            android:id="@+id/tvEndTimeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medium"
            android:text="@string/return_time"
            android:textColor="@color/app_black"
            android:textSize="@dimen/_15sp"
            app:layout_constraintStart_toStartOf="@+id/tvEndTime"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/datesguidelineEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6" />

        <TextView
            android:id="@+id/tvEndDateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medium"
            android:text="@string/back_day"
            android:textColor="@color/app_black"
            android:textSize="@dimen/_15sp"
            app:layout_constraintStart_toStartOf="@+id/tvEndDate"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvEndDate"
            android:layout_width="0dp"
            android:layout_height="@dimen/_45dp"
            android:layout_marginHorizontal="@dimen/_2dp"
            android:layout_marginTop="@dimen/_4dp"
            android:background="@drawable/home_date_picker"
            android:drawableEnd="@drawable/ic_calender_home"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:hint="@string/choose_date"
            android:paddingHorizontal="@dimen/_16dp"
            android:textColor="@color/gray6"
            android:textSize="@dimen/_14sp"
            app:layout_constraintEnd_toEndOf="@+id/datesguidelineEnd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEndDateTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>