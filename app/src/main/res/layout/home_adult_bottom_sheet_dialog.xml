<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    app:cardUseCompatPadding="true"
    android:layout_marginStart="@dimen/_25dp"
    android:layout_marginEnd="@dimen/_25dp"
    app:cardCornerRadius="@dimen/_25dp">

    <TextView
        android:id="@+id/single"
        app:drawableLeftCompat="@drawable/home_one_adult"
        app:drawableStartCompat="@drawable/home_one_adult"
        android:layout_marginTop="8dp"
        android:text="1"
        android:textSize="@dimen/_14sp"
        android:textStyle="bold"
        android:textColor="@color/base_app_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/ActionItem"
        />
    <TextView
        android:id="@+id/duo"
        app:drawableLeftCompat="@drawable/home_two_adults"
        app:drawableStartCompat="@drawable/home_two_adults"
        android:text="2"
        android:textSize="@dimen/_14sp"
        android:textStyle="bold"
        android:textColor="@color/base_app_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/single"
        style="@style/ActionItem"
        />
    <TextView
        android:id="@+id/triple"
        app:drawableLeftCompat="@drawable/home_there_adults"
        app:drawableStartCompat="@drawable/home_there_adults"
        android:text="3"
        android:textSize="@dimen/_14sp"
        android:textStyle="bold"
        android:textColor="@color/base_app_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/duo"
        style="@style/ActionItem"
        />
    <TextView
        android:id="@+id/quad"
        app:drawableLeftCompat="@drawable/home_four_adults"
        app:drawableStartCompat="@drawable/home_four_adults"
        android:text="4"
        android:textSize="@dimen/_14sp"
        android:textStyle="bold"
        android:textColor="@color/base_app_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/triple"
        style="@style/ActionItem"
        />
</androidx.constraintlayout.widget.ConstraintLayout>