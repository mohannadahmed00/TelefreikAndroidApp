<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    tools:context=".ui.more.profile.viewProfile.ViewProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80dp"
            android:background="@color/base_app_color"
            >

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24dp"
                app:srcCompat="@drawable/ic_back"
                android:tint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile"
                android:layout_marginStart="@dimen/_16dp"
                android:fontFamily="@font/regular"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sp"
                app:layout_constraintBottom_toBottomOf="@+id/imgBack"
                app:layout_constraintStart_toEndOf="@+id/imgBack"
                app:layout_constraintTop_toTopOf="@+id/imgBack" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"

            android:layout_marginHorizontal="@dimen/_25dp"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imgUserImage"
                android:layout_width="@dimen/_70dp"
                android:layout_height="@dimen/_70dp"
                android:src="@drawable/ic_no_image"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginBottom="@dimen/_20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/medium"
                tools:text="حسين محمود محمد"
                android:textColor="@color/base_app_color"
                android:textSize="@dimen/_16sp"
                app:layout_constraintStart_toEndOf="@+id/imgUserImage"
                app:layout_constraintTop_toTopOf="@+id/imgUserImage" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:fontFamily="@font/medium"
                tools:text="+01099271225"
                android:textColor="@color/gray4"
                android:textSize="@dimen/_16sp"
                android:textDirection="anyRtl"
                app:layout_constraintBottom_toBottomOf="@+id/imgUserImage"
                app:layout_constraintStart_toEndOf="@+id/imgUserImage"
                app:layout_constraintTop_toBottomOf="@+id/tvName" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:background="@color/gray7"
            />
        <TextView
            android:id="@+id/tvPersonalInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/personal_info"
            android:fontFamily="@font/medium"
            android:paddingHorizontal="@dimen/_40dp"
            android:paddingBottom="@dimen/_24dp"
            android:paddingTop="@dimen/_24dp"
            android:layout_marginTop="@dimen/_4dp"
            android:background="@color/more_tap_bg"
            android:textSize="@dimen/_14sp"
            android:textColor="@color/app_black"
            android:drawablePadding="@dimen/_16dp"
            android:drawableStart="@drawable/person_black_24_dp"
            android:drawableEnd="@drawable/ic_arrow"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/places"
            android:fontFamily="@font/medium"
            android:paddingBottom="@dimen/_24dp"
            android:paddingTop="@dimen/_24dp"
            android:layout_marginTop="@dimen/_4dp"
            android:paddingHorizontal="@dimen/_40dp"
            android:background="@color/more_tap_bg"
            android:textSize="@dimen/_14sp"
            android:textColor="@color/app_black"
            android:drawablePadding="@dimen/_16dp"
            android:drawableStart="@drawable/place_black_24_dp"
            android:drawableEnd="@drawable/ic_arrow"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/account_card"
            android:fontFamily="@font/medium"
            android:paddingBottom="@dimen/_24dp"
            android:paddingTop="@dimen/_24dp"
            android:layout_marginTop="@dimen/_4dp"
            android:paddingHorizontal="@dimen/_40dp"
            android:background="@color/more_tap_bg"
            android:textSize="@dimen/_14sp"
            android:textColor="@color/app_black"
            android:drawablePadding="@dimen/_16dp"
            android:drawableStart="@drawable/credit_card_black_24_dp"
            android:drawableEnd="@drawable/ic_arrow"
            />

    </LinearLayout>
</ScrollView>