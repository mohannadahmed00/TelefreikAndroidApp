<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_90dp"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/_5dp"
    app:cardCornerRadius="@dimen/_4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_transport_bg"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/imgChecked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_4dp"
            android:layout_marginStart="@dimen/_4dp"
            app:srcCompat="@drawable/ic_checked"
            />
        <ImageView
            android:id="@+id/imgTransport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8dp"
            app:srcCompat="@drawable/ic_plane"
            />
        <TextView
            android:id="@+id/tvTransportationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sp"
            android:layout_marginBottom="@dimen/_4dp"
            android:layout_marginTop="@dimen/_8dp"
            android:fontFamily="@font/medium"
            android:textAlignment="center"
            android:text="@string/plane"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.cardview.widget.CardView>