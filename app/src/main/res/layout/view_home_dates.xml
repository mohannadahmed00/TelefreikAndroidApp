<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible">

    <TextView
        android:id="@+id/tvReturnDate"
        android:layout_width="0dp"
        android:layout_height="@dimen/_45dp"
        android:layout_marginHorizontal="@dimen/_2dp"
        android:layout_marginTop="@dimen/_4dp"
        android:background="@drawable/home_date_picker"
        android:drawableEnd="@drawable/ic_calender_home"
        android:fontFamily="@font/regular"
        android:gravity="center_vertical"
        android:hint="@string/choose_date"
        android:paddingHorizontal="@dimen/_16dp"
        android:textColor="@color/gray6"
        android:textSize="@dimen/_14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/datesguideline"
        app:layout_constraintTop_toBottomOf="@+id/tvReturnTitle" />

    <TextView
        android:id="@+id/tvReturnTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medium"
        android:text="@string/back_day"
        android:textColor="@color/app_black"
        android:textSize="@dimen/_15sp"
        app:layout_constraintStart_toStartOf="@+id/tvReturnDate"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/datesguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medium"
        android:text="@string/travel_date"
        android:textColor="@color/app_black"
        android:textSize="@dimen/_15sp"
        app:layout_constraintStart_toStartOf="@+id/tvStartDate"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvStartDate"
        android:layout_width="0dp"
        android:layout_height="@dimen/_45dp"
        android:layout_marginHorizontal="@dimen/_2dp"
        android:layout_marginTop="@dimen/_4dp"
        android:background="@drawable/home_date_picker"
        android:drawableEnd="@drawable/ic_calender_home"
        android:fontFamily="@font/regular"
        android:gravity="center_vertical"
        android:hint="@string/choose_date"
        android:paddingHorizontal="@dimen/_16dp"
        android:textColor="@color/gray6"
        android:textSize="@dimen/_14sp"
        app:layout_constraintEnd_toEndOf="@+id/datesguideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />
</androidx.constraintlayout.widget.ConstraintLayout>