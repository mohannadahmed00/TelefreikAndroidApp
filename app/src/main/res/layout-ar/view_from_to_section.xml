<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edtEnd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_15"
        android:drawableEnd="@drawable/ic_search_black_24_dp"
        android:fontFamily="@font/regular"
        android:padding="@dimen/_20dp"
        android:lineSpacingExtra="@dimen/_12dp"
        android:textSize="@dimen/_12sp"
        android:layout_marginTop="@dimen/_4dp"
        android:inputType="none"
        android:drawablePadding="@dimen/_8dp"
        android:textAlignment="viewStart"
        android:hint="@string/arrival_station"
        android:imeOptions="actionSearch"
        android:textColor="@color/gray_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/medium"
        android:text="@string/arrival_station"
        android:layout_marginTop="@dimen/_8dp"
        android:textColor="@color/app_black"
        android:textSize="@dimen/_15sp"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        app:srcCompat="@drawable/circle_location"
        android:contentDescription="@string/arrival_station" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line_5"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle_location" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_station"
        android:fontFamily="@font/medium"
        android:textSize="@dimen/_15sp"
        android:layout_marginStart="@dimen/_8dp"
        android:textColor="@color/app_black"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <EditText
        android:id="@+id/edtStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:textColor="@color/gray_2"
        android:textSize="@dimen/_12sp"
        android:textAlignment="viewStart"
        android:imeOptions="actionSearch"
        android:layout_marginTop="4dp"
        android:inputType="none"
        android:lineSpacingExtra="@dimen/_12dp"
        android:hint="@string/start_station"
        android:drawablePadding="@dimen/_8dp"
        android:drawableEnd="@drawable/ic_search_black_24_dp"
        android:padding="@dimen/_20dp"
        android:background="@drawable/rectangle_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <ImageView
        android:id="@+id/switchDirections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_20dp"
        app:srcCompat="@drawable/ic_swap_vert_black_24_dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="@+id/edtStart"
        app:layout_constraintTop_toTopOf="@+id/textView9" />

</androidx.constraintlayout.widget.ConstraintLayout>